<% if user_signed_in? %>

<div class='container'>
	<div class='row'>
		<!-- side bar
        <div class="col-md-3 col-sm-4 sidebar">
            <ul class="nav nav-stacked nav-pills">
            	<li><a href="#">Menu1</a></li>
